{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "dependencies": {
    "@repo/db": "*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^22",
    "eslint": "^9.20.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.7.3"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}